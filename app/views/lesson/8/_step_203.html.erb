                        <div class="matrix-object">0</div>
                    </div>
                    <div class="content-row">
                        <div class="matrix-object">1</div>
                        <div class="matrix-object">0</div>
                        <div class="matrix-object">1</div>
                        <div class="matrix-object">0</div>
                    </div>
                    <div class="content-row">
                        <div class="matrix-object">0</div>
                        <div class="matrix-object">1</div>
                        <div class="matrix-object">0</div>
                        <div class="matrix-object">1</div>
                    </div>
